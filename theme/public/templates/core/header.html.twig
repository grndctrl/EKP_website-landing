{% embed "layout/section.html.twig" with {
  section_tag : "header",
  section_class: ['header-main', 'header-unpin', 'z-50']
} %}

  {% block header %}

    <nav id="nav-main" class="nav-main flex justify-between items-center" role="navigation">
      <div class="branding">
        <a href="{{ site.link }}">
        <span class="font-bold text-xl uppercase tracking-widest">{{ site.title }}</span>
        </a>
      </div>
      
      <div class="nav-menu text-3xl lg:text-base z-40">
        {% include "components/menu.html.twig" with {
          "menu" : menu.get_items
        } %}
        <a href="#footer" class="footer-toggle nav-menu-item">footer</a>
      </div>

      <div class="nav-burger relative z-50">
        <span></span>
        <span></span>
      </div>

    </nav>

  {% endblock %}

{% endembed %}
