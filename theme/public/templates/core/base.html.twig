<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" {{ site.language_attributes }}>
  <!--<![endif]-->
  <head>
    <meta charset="{{ site.charset }}"/>

    <title>
      {% if wp_title %}
        {{ wp_title ~ ' | ' ~ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>

    {% include "core/metadata.html.twig" %}

    {{function('wp_head')}}

    {% block head %}{% endblock %}
  </head>

  <body class="{{ body_class|join(' ') }}">

    {% block header %}
      {% include "core/header.html.twig" %}
    {% endblock %}

    <main class="main z-10 relative" data-barba="wrapper">
      <div data-barba="container" data-barba-namespace="{{ post.post_name }}">
        {% block main %}{% endblock %}

        {% block scripts %}{% endblock %}
      </div>
    </main>

    {% block footer %}
      {% include "core/footer.html.twig" %}
    {% endblock %}

    {{ function('wp_footer') }}
  </body>
</html>