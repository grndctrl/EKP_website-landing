  <head>
    <meta charset="{{ site.charset }}"/>

    <title>
      {% if wp_title %}
        {{ wp_title ~ ' | ' ~ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>

    {% include "core/metadata.html.twig" %}

    {{function('wp_head')}}

    {% block head %}{% endblock %}
  </head>

  <body class="{{body_class}}">

    {% block header %}

      {% include "components/header.html.twig" %}

    {% endblock %}

    {% block main %}{% endblock %}

    {% block footer %}

      {% include "components/footer.html.twig" %}

    {% endblock %}

    {% block scripts %}{% endblock %}

    {{ function('wp_footer') }}
  </body>
