{# Default page #}

{% extends "core/base.html.twig" %}

{% block main %}

  <section class="section">
    <div class="container">

      <div class="hero header-offset">
        <h1>{{ site.title }}</h1>
      </div>

    </div>
  </section>

  {% for post in posts %}

    <section class="section">
      <div class="container">

        <a href="{{ post.link }}">
          <h2>{{ post.title }}</h2>
        </a>

      </div>
    </section>

  {% endfor %}

{% endblock %}
